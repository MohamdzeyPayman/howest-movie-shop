@model List<howest_movie_shop.Library.DTO.ShopDTO>;

<section id="cart">
    <div id="cartoverview">
        @if (Model == null || Model.Count == 0)
        {
            <h2>There are no orders</h2>
        }
        else
        {
            <h2>Your Order details</h2>
            <div class="items">
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Customer Name</th>
                            <th>Movie Titles</th>
                            <th>Total Price</th>
                            <th>Address</th>
                            <th>Delete Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ double total = 0;
                            foreach (var shop in Model)
                            {
                                
                                <tr>
                                    <td>@shop.OrderId</td>
                                    <td>@shop.OrderDate.ToShortDateString()</td>
                                    <td>@shop.CustomerName</td>
                                    <td>@shop.MovieTitle</td>
                                    <td>€ @shop.TotalPrice</td>
                                    <td>@shop.Address</td>
                                     <td><a href="/order/deleteOrder/@shop.OrderId">Delete</a></td>
                                </tr>
                            }
                        }


                    </tbody>
                   
                </table>
            </div>
           }
    </div>
</section>